[user]
	name = Simon Scherer
	email = simon.scherer@student.tugraz.at
[color "status"]
	branch = 14 normal
	added = 10 normal
	updated = 10 normal
	localbranch = 14 normal
	changed = 11 normal
	header = normal
	remotebranch = 13 normal
	nobranch = 1 normal italic
	unmerged = 9 normal
	untracked = normal dim
[core]
	pager = less -LRs --mouse

[interactive]
    diffFilter = delta --color-only

[delta]
    features = decorations
    syntax-theme = Monokai Extended Bright

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

# https://github.com/dandavison/delta/issues/630
[pager]
	diff = LESS='LRc --mouse' delta
	show = LESS='LRc --mouse' delta
	stash = LESS='LRc --mouse' delta
	log = LESS='LRc --mouse' delta
	reflog = LESS='LRc --mouse' delta
