{
  "workbench.colorTheme": "XD Theme - MixItUp",
  "editor.fontFamily": "'RobotoMono Nerd Font', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  // "editor.formatOnSave": true,
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "emmet.triggerExpansionOnTab": true,
  "emmet.useInlineCompletions": true,
  //+---------------------------
  //            Vim
  //+---------------------------
  "vim.ignorecase": true,
  "vim.smartcase": false,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  //+---------------------------
  //          Languages
  //+---------------------------
  "clangd.path": "/home/simon/.config/VSCodium/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/19.1.2/clangd_19.1.2/bin/clangd",
  // "clangd.fallbackFlags": ["-std=c++17"],
  "C_Cpp.errorSquiggles": "Disabled",
  "C_Cpp.intelliSenseEngineFallback": "Disabled",
  "C_Cpp.intelliSenseEngine": "Disabled",
  "C_Cpp.autocomplete": "Disabled",
  "clangd.arguments": [
    "--log=verbose",
    "--pretty",
    "--all-scopes-completion",
    "--completion-style=bundled",
    "--header-insertion=iwyu",
    "--header-insertion-decorators",
    "--background-index",
    "--clang-tidy",
    "--clang-tidy-checks=cppcoreguidelines-*,performance-*,bugprone-*,portability-*,modernize-*,google-*",
    "-j=4"
    // "--function-arg-placeholders=false"
  ],
  "python.languageServer": "Jedi",
  "python.analysis.typeCheckingMode": "strict",
  "haskell.manageHLS": "PATH",
  "haskell.serverExecutablePath": "~/.ghcup/bin/haskell-language-server-9.4.7",
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "xaver.clang-format",
    // "editor.formatOnSave": true,
    "editor.rulers": [
      //{
      //"column": 80,    // spacing of 1st column from left
      //"color": "#9f0af5"   // purple, go Pirates!
      //},
      100, // 2nd ruler with no color option
      {
        "column": 120, // third ruler
        "color": "#ff9900" // orange, Go Vols!
      }
    ]
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.rulers": [
      //{
      //"column": 80,    // spacing of 1st column from left
      //"color": "#ff9900"   // orange, Go Vols!
      //},
      100, // 2nd ruler with no color option
      {
        "column": 120, // third ruler
        "color": "#9f0af5" // purple, go Pirates!
      }
    ]
  },
  "[latex]": {
    "editor.wordWrap": "on",
    "editor.formatOnSave": true,
  },
  "[shellscript]": {
    "editor.wordWrap": "on"
  },
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  },
  //+---------------------------
  //        Extensions
  //+---------------------------
  "liveServer.settings.donotShowInfoMsg": true,
  "verilog.linting.linter": "verilator",
  "tabnine.experimentalAutoImports": true,

  "latex-workshop.formatting.latex": "tex-fmt",
  "latex-workshop.latex.external.build.args": [
    "-shell-escape"
  ],
  "latex-workshop.latex.magic.args": [
    "-synctex=1",
    "-interaction=nonstopmode",
    "-file-line-error",
    "-shell-escape",
    "%DOC%"
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex, makeglossaries, pdflatex (2x)",
      "tools": [
        "pdflatex",
        "makeglossaries",
        "biber",
        "pdflatex"
      ]
    },
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-shell-escape",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "makeglossaries",
      "command": "makeglossaries",
      "args": [
        "%DOCFILE%"
      ]
    },
    {
      "name": "biber",
      "command": "biber",
      "args": [
        "%DOC%"
      ]
    },
  ],
}