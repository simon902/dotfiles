{
  "workbench.colorTheme": "XD Theme - MixItUp",
  "editor.fontFamily": "'RobotoMono Nerd Font', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",

  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "vim.ignorecase": true,
  "vim.smartcase": false,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,

  "liveServer.settings.donotShowInfoMsg": true,
  "html.format.contentUnformatted": "",
  "emmet.triggerExpansionOnTab": true,
  "files.associations": { 
    "*html": "html",
    "*.pl" : "prolog"
   },
  "emmet.useInlineCompletions": true,

  "haskell.manageHLS": "PATH",
  "haskell.serverExecutablePath": "~/.ghcup/bin/haskell-language-server-8.10.7",

  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  "tabnine.experimentalAutoImports": true,

  // Language Settings
  "clangd.path": "/home/simon/.config/VSCodium/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/15.0.6/clangd_15.0.6/bin/clangd",
  "C_Cpp.errorSquiggles": "disabled",
  "C_Cpp.intelliSenseEngineFallback": "disabled",
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.autocomplete": "disabled",
  // "clangd.fallbackFlags": ["-std=c++17"],
  "clangd.arguments": [
    "--log=verbose",
    "--pretty",
    "--all-scopes-completion",
    "--completion-style=bundled",
    "--header-insertion=iwyu",
    "--header-insertion-decorators",
    "--background-index",
    "--clang-tidy",
    "--clang-tidy-checks=cppcoreguidelines-*,performance-*,bugprone-*,portability-*,modernize-*,google-*",
    "-j=4"
    // "--function-arg-placeholders=false"
  ],
  "[cpp]": {
    "editor.wordBasedSuggestions": false,
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.rulers": [
      //{
      //"column": 80,    // spacing of 1st column from left
      //"color": "#9f0af5"   // purple, go Pirates!
      //},
      100, // 2nd ruler with no color option
      {
        "column": 120, // third ruler
        "color": "#ff9900" // orange, Go Vols!
      }
    ]
  },

  "[python]": {
    "editor.tabSize": 4,
    "editor.rulers": [
      //{
      //"column": 80,    // spacing of 1st column from left
      //"color": "#ff9900"   // orange, Go Vols!
      //},
      100, // 2nd ruler with no color option
      {
        "column": 120, // third ruler
        "color": "#9f0af5" // purple, go Pirates!
      }
    ]
  },
  "[latex]": {
    "editor.wordWrap": "on"
  },
  
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  }
}
